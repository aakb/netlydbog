function elib_str_to_time($str,$aststamp = false){
	list($d,$t) = explode(" ",$str);
	list($r['y'],$r['m'],$r['d']) = explode("-",$d);
	list($r['h'],$r['i'],$r['s']) = explode(":",$t);
	if($aststamp){
		return mktime($r['h'],$r['i'],$r['s'],$r['m'],$r['d'],$r['y']);
	}
	return $r;
}

function elib_block($op = 'list', $delta = 0, $edit = array()) {
  if ($op == 'list') {
