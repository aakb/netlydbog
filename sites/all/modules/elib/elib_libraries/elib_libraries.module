function elib_libraries_findlib($cpr){
	$res = db_query('SELECT elib_library
                     FROM {elib_user}
                    WHERE elib_user.elib_id = "' . elib_user_elib_id($cpr) . '"');

	echo json_encode(db_fetch_array($res));
}

function elib_libraries_form_alter(&$form, $form_state, $form_id) {
  switch ($form_id) {
    case 'user_login':
    case 'user_login_block':
      $form['library'] = array(
        '#type' => 'select',
        '#title' => t('Dit bibliotek'),
        '#options' => elib_libraries_get_libraries(),
      );
      break;
  }
}

function elib_libraries_get_libraries(){
	$matrix = variable_get('elib_libraries', FALSE);
	if ($matrix) {
    $libraries = explode("\n",  $matrix);
    foreach ($libraries as $library) {
      $p = explode('|',$library);
      $libs[trim($p[0])] = trim($p[1]);
    }

    return $libs;
	}

  return FALSE;
}

function elib_libraries_get_library_keycode($lib){
  $matrix = variable_get('elib_libraries', FALSE);
  if ($matrix) {
    $libraries = explode("\n", $matrix);
    foreach ($libraries as $library) {
      $p = explode('|',$library);
      if ($p[0] == $lib) {
        return $p[2];
      }
    }
  }

  return FALSE;
}

function elib_libraries_get_maxloans($lib){
  $matrix = variable_get('elib_libraries', FALSE);
  if ($matrix) {
    $libraries = explode("\n",$matrix);
    foreach ($libraries as $library) {
      $p = explode('|',$library);
      if ($p[0] == $lib) {
        return $p[3];
      }
    }
  }

  return FALSE;
}