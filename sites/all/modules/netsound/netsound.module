    $blocks[1]['info'] = t('Genre: Categories');
    return $blocks;
  }
  elseif ($op == 'view') {
    switch($delta){
      case 0:
      	$block['subject'] = t('Keywords');
        
      	   	
      	$keywords = explode(',',variable_get('netsound_keywords', ''));
      	if(is_array($keywords)){
